<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <ImageView
        android:id="@+id/bottom_background"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:src="@drawable/bottom_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/old_man_logo"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/old_man_logo"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:src="@drawable/grandpa"
        app:layout_constraintTop_toBottomOf="@+id/back_button"
        tools:layout_editor_absoluteX="-1dp" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Back"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        android:text="Connect"
        android:textColor="#6C4A4A"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@+id/old_man_logo"
        tools:layout_editor_absoluteX="40dp" />
    <TextView
        android:id="@+id/enter_group_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter group code: "
        android:textColor="#6C4A4A"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf ="@+id/connect"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="40dp"
        />
    <EditText
        android:id="@+id/enter_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf ="@+id/enter_group_code"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="40dp"
        />

    <Button
        android:id="@+id/enter_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginVertical="30dp"
        android:backgroundTint="@color/button"
        android:text="Enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_field"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have a group code? Create code "
        android:textColor="#6C4A4A"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bottom_background"
        app:layout_constraintTop_toBottomOf="@+id/enter_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>