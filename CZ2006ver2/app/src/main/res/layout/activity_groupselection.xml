<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".GroupselectionActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/dBrown" />

    <TextView
        android:id="@+id/back_button_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Back"
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/grouppagepic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/grandpa"
        app:layout_constraintTop_toBottomOf="@+id/back_button" />

    <ImageView
        android:id="@+id/bottom_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/onboarding_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grouppagepic" />

    <TextView
        android:id="@+id/groupSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your \ngroup"
        android:textColor="@color/dBrown"
        android:textSize="35dp"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="5dp"
        app:layout_constraintTop_toBottomOf="@+id/grouppagepic" />

    <ImageView
    android:id="@+id/maleprofile"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:src="@drawable/maleprofile"
    android:layout_marginTop="25dp"
    android:layout_marginRight="50dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/groupSelect" />

    <ImageView
        android:id="@+id/femaleprofile"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/femaleprofile"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupSelect" />

    <TextView
        android:id="@+id/emailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_centerVertical = "true"
        android:text="Email address:"
        android:textColor="@color/dBrown"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/femaleprofile"/>

</androidx.constraintlayout.widget.ConstraintLayout>